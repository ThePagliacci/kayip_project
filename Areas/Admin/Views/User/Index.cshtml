@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}               
<div class="container-fluid px-4">
 <div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">User List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
    <div class="row pb-3">
    <div class="col-12 text-end">
        <a asp-controller="User" asp-action="Create" class="btn btn-dark">
           <i class="bi bi-plus-circle"></i> Create New User
        </a>
    </div>

    </div>
    <table id="tblData" style="width: 100%;" class="table table-bordered table-stripped">
    <thead>
        <tr>
     <th>First Name</th>
   <th>Last Name</th>
      <th>Email</th>
      <th>City</th>
      <th>District</th>
      <th>Role</th>
      <th></th>
    </tr>
    </thead>
           </table>
    </div>
 </div>
</div>
@section Scripts{
    <script src="~/js/user.js"></script>
         }