@model UserVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Edit User</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

<form method="post" action="">
        <input asp-for="ApplicationUser.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="form-floating py-2 col-12">
            <input asp-for="ApplicationUser.FName" class="form-control border-0 shadow">
            <label asp-for="ApplicationUser.FName" class="ms-2"></label>
            <span asp-validation-for="ApplicationUser.FName" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="ApplicationUser.LName" class="form-control border-0 shadow">
            <label asp-for="ApplicationUser.LName" class="ms-2"></label>
            <span asp-validation-for="ApplicationUser.LName" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="ApplicationUser.Email" class="form-control border-0 shadow">
            <label asp-for="ApplicationUser.Email" class="ms-2"></label>
            <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="ApplicationUser.City" class="form-control border-0 shadow">
            <label asp-for="ApplicationUser.City" class="ms-2"></label>
            <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
            <input asp-for="ApplicationUser.District" class="form-control border-0 shadow">
            <label asp-for="ApplicationUser.District" class="ms-2"></label>
            <span asp-validation-for="ApplicationUser.District" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
            <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select border-0 shadow">
                <option disabled>Select Role</option>
            </select>
            <label asp-for="ApplicationUser.Role" class="ms-2"></label>
            <span asp-validation-for="ApplicationUser.Role" class="text-danger"></span>
        </div>


        <div class="row mt-4">
            <div class="col-6 col-md-3">
        <button type="submit" class="btn btn-dark form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
        <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}