@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Kayıt Ol";
}
<section class="section pb-5">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-6" data-aos="fade-up">
                <h2 class="center-button">@ViewData["Title"]</h2>
                <h3 class="mt-3 center-button" id="external-login-title">@Model.ProviderDisplayName hesabınızı ilişkilendirin.</h3>
                <p id="external-login-description" class="mt-3">
                    <strong>@Model.ProviderDisplayName</strong> ile başarılı bir şekilde kimlik doğrulaması yaptınız. Lütfen aşağıya bu site için bir e-posta adresi girin ve oturum açmayı tamamlamak için Kaydol düğmesine tıklayın.
                    logging in.
                </p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 mb-5 mb-md-0" data-aos="fade-up">
                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="row gy-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Input.FName">Adı</label>
                            <input asp-for="Input.FName" class="form-control" autocomplete="email"/>
                            <span asp-validation-for="Input.FName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Input.LName">Soyadı</label>
                            <input asp-for="Input.LName" class="form-control" autocomplete="email"/>
                            <span asp-validation-for="Input.LName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Input.Email">Email</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="email"/>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Input.City">Şehir</label>
                            <input asp-for="Input.City" class="form-control" autocomplete="email"/>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Input.District">İl</label>
                            <input asp-for="Input.District" class="form-control" autocomplete="email"/>
                            <span asp-validation-for="Input.District" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-10 m-8 d-flex flex-column align-items-center center-button">
                        <button type="submit" class="readmore w-75 mb-3">Kayıt ol</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
