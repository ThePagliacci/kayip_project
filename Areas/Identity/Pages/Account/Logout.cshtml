@page
@model LogoutModel
@{
    ViewData["Title"] = "Çıkış yap";
}

<section class="section pb-5" style="margin-bottom: 14%;">
    <div class="container">
    <h2 class="center-button">@ViewData["Title"]</h2>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <u class="text-danger">
                <button type="submit" class="text-danger mt-5 center-button nav-link btn btn-link">Çıkış yapmak için buraya tıklayın</button></u>
            </form>
        }
        else
        {
            <p class="mt-5 center-button">Web sitesinden başarıyla çıkış yaptınız.</p>
        }
    }
    </div>
</section>
